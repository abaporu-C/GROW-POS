@model GROW_CRM.Models.Household

@{
    ViewData["Title"] = "Create Household";
}



<h3>Create Household</h3>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">   
    <div class="row">
        <div class="col-md-6">    
            <fieldset class="form-group border p-4 rounded">
                <legend class="w-auto">Address</legend>
            <label for="noFixedAddr" class="control-label">No Fixed Address:</label>
            <input type="checkbox" id="noFixedAddr" /><a href="#"  data-toggle="popover" title="No Fixed Address" data-content="Members with no fixed address will be registered with GROW's address.'"><b>?</b></a> 
            <input asp-for="LastVerification" type="hidden" value="@DateTime.Now" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CityID" class="control-label"></label><a href="#"  data-toggle="popover" title="City" data-content="Members city name."><b>?</b></a> 
                <select asp-for="CityID" class="form-control" asp-items="ViewBag.CityID">
                    <option value="">Select a City</option>
                </select>
                <span asp-validation-for="CityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProvinceID" class="control-label"></label><a href="#"  data-toggle="popover" title="Province" data-content="Members province name."><b>?</b></a> 
                <select asp-for="ProvinceID" class="form-control" asp-items="ViewBag.ProvinceID">
                </select>
                <span asp-validation-for="ProvinceID" class="text-danger"></span>
            </div>            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AptNumber" class="control-label"></label><a href="#"  data-toggle="popover" title="Apartment Number" data-content="Members apartment number (if there is one)."><b>?</b></a> 
                        <input asp-for="AptNumber" class="form-control" />
                        <span asp-validation-for="AptNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StreetNumber" class="control-label"></label><a href="#"  data-toggle="popover" title="Street Number" data-content="Members street number."><b>?</b></a> 
                        <input asp-for="StreetNumber" class="form-control" />
                        <span asp-validation-for="StreetNumber" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="StreetName" class="control-label"></label><a href="#"  data-toggle="popover" title="Street Name" data-content="Members street name."><b>?</b></a> 
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label><a href="#"  data-toggle="popover" title="Postal Code" data-content="Members postal code."><b>?</b></a> 
                <input asp-for="PostalCode" class="form-control" id="postal-code" placeholder="Example: A2B 3C4" pattern="/^[ABCEGHJ-NPRSTVXY]\d[ABCEGHJ-NPRSTV-Z][ -]?\d[ABCEGHJ-NPRSTV-Z]\d$/i" title="Example: A2A 2B2" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <input type="hidden" value="false" asp-for="LICOVerified" />
            </fieldset>
        </div>
        <div class="col-md-6">
            <fieldset class="form-group border p-4 rounded">
                <legend class="w-auto">Other Info</legend>
            <div class="form-group">
                <label id="NewIDLabel" class="control-label">Member ID:</label><a href="#"  data-toggle="popover" title="Custom ID" data-content="Use in case a specific ID number is needed."><b>?</b></a> 
                @Html.TextBox("NewID", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><a href="#"  data-toggle="popover" title="Household Name" data-content="Member's Last Name"><b>?</b></a> 
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdStatusID">Household status</label><a href="#"  data-toggle="popover" title="Household Status" data-content="Household status with grow."><b>?</b></a> 
                <select asp-for="HouseholdStatusID" class="form-control" asp-items="ViewBag.HouseholdStatusID">
                </select>
                <span asp-validation-for="HouseholdStatusID" class="text-danger"></span>
            </div>
            </fieldset>
        </div>
    </div>    
    <div class="form-group mt-3">
        <input class="btn btn-danger mr-3 " type="reset" name="name" value="Clear" onclick="return confirm('Are you sure you want to clear all data on this page?');" />
        <input type="submit" id="submitForm" value="Next Step" class="btn btn-primary " />

    </div>
</form>
<div>
    <a asp-action="Index" class="mt-3">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        var input = document.getElementById('postal-code');

        input.onkeyup = function () {
            this.value = this.value.replace(/\s/g, '').replace(/^(.{3})(.{3})(.*)$/, '$1 $2').trim();

            if (input.value.length > 7) {
                this.value = this.value.substr(0, 7);
            }
            else {
                this.value = this.value.toUpperCase();
            }
        }
    </script>
    <script>
        $('#noFixedAddr').on('click', function () {
            if ($(this).prop('checked')) {
                $('#AptNumber').prop("value", "").prop('disabled', true)
                $('#StreetNumber').prop("value", "4377").prop('disabled', true)
                $('#StreetName').prop("value", "Fourth Ave.").prop('disabled', true)
                $('#postal-code').prop("value", "L2E 4N1").prop('disabled', true)
                $('#CityID').prop("value", "2").prop('disabled', true)
                $('#ProvinceID').prop("value", "13").prop('disabled', true)
            }
            else {
                $('#AptNumber').val("").prop('disabled', false)
                $('#StreetNumber').val("").prop('disabled', false)
                $('#StreetName').val("").prop('disabled', false)
                $('#postal-code').val("").prop('disabled', false)
                $('#CityID').val("").prop('disabled', false)
                $('#ProvinceID').val("").prop('disabled', false)
            }
        })

        $('#submitForm').on('click', function () {
            $('#AptNumber').prop('disabled', false)
            $('#StreetNumber').prop('disabled', false)
            $('#StreetName').prop('disabled', false)
            $('#postal-code').prop('disabled', false)
            $('#CityID').prop('disabled', false)
            $('#ProvinceID').prop('disabled', false)
        })
    </script>
    <script>
$(document).ready(function(){
  $('[data-toggle="popover"]').popover();
});
</script>
}
