<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GROW_CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/identity.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ultra&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/60de6f2e29.js" crossorigin="anonymous"></script>
</head>
<body class="m-0 p-0">    
    <div id="carouselExampleControls" class="carousel slide" style="position: absolute; z-index: 1; height: 100vh; width: 100vw" data-ride="carousel">
        <div class="carousel-inner vh-100">
            <div class="carousel-item h-100 active" style="background:url('/images/Vegetables1.jpg'); background-size:cover"></div>
            @*<div class="carousel-item h-100" style="background:url('/images/Vegetables2.jpg'); background-size:cover"></div>
            <div class="carousel-item h-100" style="background:url('/images/Vegetables3.jpg'); background-size:cover"></div>*@
        </div>       
    </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.carousel').carousel({interval: 7000});
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
