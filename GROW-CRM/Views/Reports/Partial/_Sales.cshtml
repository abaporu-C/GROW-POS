@using GROW_CRM.ViewModels.ReportsViewModels

@{
    @if ((int)ViewData["Count"] > 0)
    {
        <a asp-action="DownloadSales" class="btn btn-info float-left">Download Sales Report</a>
    }
    <br />
    <table class="table table-striped">
        <thead>
            <tr>
                @foreach (string header in (string[])ViewBag.Headers)
                {
                    <th>@header</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (OrdersReport item in ViewBag.Report)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member)
                    </td>
                    <td>
                        $ @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderItems)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}