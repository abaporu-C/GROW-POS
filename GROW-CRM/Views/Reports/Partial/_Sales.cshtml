@using GROW_CRM.ViewModels.ReportsViewModels


    <br>
    <h4>Sales this week: @ViewData["Count"]</h4>
    <br>

@{
    @if ((int)ViewData["Count"] > 0)
    {
        <div class="row">
            <a asp-action="DownloadSales" class="btn btn-info float-left" style="margin-left: 15px">Download Sales Report</a>
        </div>
    }
    <br />
    <div class="table-responsive">
    <table class="table table-striped rounded-top">
        <thead class="thead-dark">
            <tr>
                @foreach (string header in (string[])ViewBag.Headers)
                {
                    <th>@header</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (OrdersReport item in ViewBag.Report)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalFormated)
                    </td>

                </tr>
            }
        </tbody>
    </table>
    </div>
}