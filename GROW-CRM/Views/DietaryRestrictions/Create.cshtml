@model GROW_CRM.Models.DietaryRestriction

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DietaryRestriction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Restriction" class="control-label"></label><span style="color:red">*</span>
                <input asp-for="Restriction" class="form-control" />
                <span asp-validation-for="Restriction" class="text-danger"></span>
                <label asp-for="HealthIssueType" class="control-label"></label><span style="color:red">*</span>
                <select asp-for="HealthIssueTypeID" class="form-control" asp-items="ViewBag.HealthIssueTypeID">
                    <option value="">Select a Type</option>
                </select>
                <span asp-validation-for="HealthIssueTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <button id="auto-fill" class="btn btn-outline-info">Auto Fill</button>
</div>
<div>
    <a asp-action="Index" asp-controller="Lookups" asp-route-Tab="DietaryRestrictionsTab">Back to Lookup List</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $(document).on('click', '#auto-fill', function(event){
        document.getElementById("Restriction").value = "Nut Allergy";
        document.getElementById("HealthIssueTypeID").value = "1";
    })
    </script>
}