@model GROW_CRM.Models.IncomeSituation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Select Financial Assistance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Situation" class="control-label"></label><span style="color:red">*</span>
                <input asp-for="Situation" class="form-control" />
                <span asp-validation-for="Situation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <button id="auto-fill" class="btn btn-outline-info">Auto Fill</button>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $(document).on('click', '#auto-fill', function(event){
        document.getElementById("Situation").value = "Informal Work";
    })
    </script>
}