@model GROW_CRM.Models.Category

@{
    ViewData["Title"] = "Create";
}
    <h1>Create Category</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><span style="color:red">*</span>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa-solid fa-floppy-disk"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
    <button id="auto-fill" class="btn btn-outline-info">Auto Fill</button>
</div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
    $(document).on('click', '#auto-fill', function(event){
        document.getElementById("Name").value = "Candy";
    })
    </script>
    }
