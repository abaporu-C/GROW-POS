@model GROW_CRM.Models.MemberIncomeSituation
<h5>Edit Member Income Situation</h5>
<form asp-action="Edit" asp-controller="MemberIncomeSituations" id="theMemberIncomeSituationsForm">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="MemberID" value='@Model.MemberID' />
            <div class="form-group">
                <label asp-for="IncomeSituationID" class="control-label"></label>
                <select asp-for="IncomeSituationID" class="form-control" asp-items="ViewBag.IncomeSituationID">
                </select>
                <span asp-validation-for="IncomeSituationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Income" class="control-label"></label>
                <input asp-for="Income" class="form-control" />
                <span asp-validation-for="Income" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" id="submitMemberIncomeSituationsForm" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
</form>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>